<h1>All Songs</h1>

<ul>
  <% @songs.each do |song| %>
    <li><%= link_to(song.title, song_path(song)) %></li>
    <% end %>
</ul>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Release Year</th>
    <th>Released</th>
    <th>Artist Name</th>
    <th>Genre</th>
  </tr>
  </thead>
  <tbody>
  <tr><% @songs.each do |song| %>
    <tr>
    <td><%= song.title %></td>
    <td><%= song.release_year %></td>
    <td><%= song.released %></td>
    <td><%= song.artist_name %></td>
    <td><%= song.genre %></td>
    <td><%= link_to("Song", song_path(song))%> |
        <%= link_to("Edit", edit_song_path(song))%> |
        <%= link_to "Delete", @song, method: :delete%>
    </td>
    </tr>
    <% end %>
    </tbody>
</table>
